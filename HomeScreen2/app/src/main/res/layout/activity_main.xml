<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#205CBF"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent"
        android:scrollbars="none">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="32px"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="306.37dp"
                android:layout_gravity="center"
                android:src="@drawable/beef_burger" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:background="@drawable/rounded_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="104dp"
                        android:layout_height="52dp"
                        android:layout_marginLeft="31dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/category_icon_menu_active_shape"
                        android:elevation="4dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:src="@drawable/star" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="2dp"
                            android:text="4.8"
                            android:textColor="#fff"
                            android:textSize="55px"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="490px"
                        android:layout_marginTop="50px">

                        <TextView
                            android:layout_width="42dp"
                            android:layout_height="33dp"
                            android:text="$20"
                            android:textColor="#C8A805"
                            android:textSize="55px"
                            android:textStyle="bold">

                        </TextView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_marginTop="200px">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Beef Burger"
                            android:textColor="@color/black"
                            android:textSize="70px"
                            android:textStyle="bold">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="50dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/add">
                        </ImageView>

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="10dp"
                            android:text="01"
                            android:textColor="@color/black"></TextView>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="3dp"
                            android:src="@drawable/minius">
                        </ImageView>

                    </LinearLayout>
                </LinearLayout>

               <LinearLayout
                   android:layout_width="300dp"
                   android:layout_height="50dp"
                   android:layout_marginLeft="30dp"
                   android:layout_marginTop="120dp">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:text="Big juicy burger with cheese lettuce tomato onions and special sauce">

                   </TextView>

               </LinearLayout>
              <LinearLayout
                  android:layout_width="100dp"
                  android:layout_height="35dp"
                  android:layout_marginTop="170dp"
                  android:layout_marginLeft="30dp">
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:text="Add ons"
                      android:textStyle="bold"
                      android:textSize="25dp"
                      android:textColor="@color/black">
                  </TextView>
              </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:layout_width="88dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            android:background="@drawable/nentrang">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/sanpham1" />
                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/add2"
                                android:layout_marginTop="53dp"
                                android:layout_marginLeft="53dp">

                            </ImageView>

                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="44dp"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="7dp"
                            android:background="@drawable/nentrang"
                            android:elevation="4dp">

                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="100dp"
                                android:layout_marginBottom="15dp"
                                android:src="@drawable/sanpham2"
                                android:layout_gravity="center"/>
                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/add2"
                                android:layout_marginTop="53dp"
                                android:layout_marginLeft="53dp">

                            </ImageView>
                        </FrameLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="44dp"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="7dp"
                            android:background="@drawable/nentrang"
                            android:elevation="4dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/sanpham3"
                                android:layout_gravity="center"/>
                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/add2"
                                android:layout_marginTop="53dp"
                                android:layout_marginLeft="53dp">

                            </ImageView>
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="279dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="350dp"
                    android:layout_marginLeft="69dp">
                    <Button
                        android:layout_width="match_parent"
                        android:id="@+id/btnStarted"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_height="match_parent"
                        android:text="Add to cart"
                        android:textAllCaps="false"
                        android:background="@drawable/botron">

                    </Button>


                </LinearLayout>



            </FrameLayout>

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>